<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4a14ac"
    android:orientation="vertical"
    tools:context="com.javacodegeeks.androidstartactivityforresultexample.ActivityOne" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="20dp"
        android:text="Do you have an Aadhar card?"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:onClick="AadhaarLogin"
        android:layout_alignParentTop="true"/>

    <Button
        android:id="@+id/scanner"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:onClick="AadhaarLogin"
        android:text="YES"
        android:textSize="40dp"
        android:textColor="#ffffff"
        android:layout_above="@+id/textView_OR"
        android:layout_centerHorizontal="true"
        android:background="#4a14ac">
    </Button>

    <TextView
        android:id="@+id/textView_OR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:gravity="center_horizontal|fill_vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/scanner2"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:onClick="BasicLogin"
        android:text="NO"
        android:textSize="40dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView_OR"
        android:layout_centerHorizontal="true"
        android:background="#4a14ac">
    </Button>
</RelativeLayout>